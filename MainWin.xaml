<Window x:Class="WpfApp1.MainWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWin" Height="600" Width="900">
    <Grid>
        <Border MinWidth="400" Margin="15" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20" >
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"></DropShadowEffect>
            </Border.Effect>
            <StackPanel>
                <Image></Image>
                <Image Height="100" Width="100" Source="/sport-car.png"/>
                <TextBlock Text="FixCars" FontSize="30" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"></TextBlock>

                
                <Button Content="Услуги" Margin="0 20" Click="Button_Serv" />
                <Button Content="Клиенты" Margin="0 20" Click="Button_Client" />
                

            </StackPanel>
            </Border>
        <Button Content="Button" HorizontalAlignment="Left" Margin="596,179,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
